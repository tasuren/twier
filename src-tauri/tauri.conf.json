{
    "$schema": "https://schema.tauri.app/config/2",
    "build": {
        "beforeDevCommand": "bun dev",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist"
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/macOS/32x32.png",
            "icons/macOS/128x128.png",
            "icons/macOS/128x128@2x.png",
            "icons/macOS/icon.icns",
            "icons/icon.ico"
        ],
        "publisher": "Takagi Tasuku",
        "copyright": "(c) 2023 Takagi Tasuku",
        "license": "GPL-3.0-or-later",
        "shortDescription": "A native X client dedicated to posting.",
        "category": "SocialNetworking",
        "macOS": {
            "signingIdentity": "-"
        }
    },
    "productName": "Twier",
    "version": "0.2.0",
    "mainBinaryName": "Twier",
    "identifier": "jp.tasuren.twier",
    "plugins": {},
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Twier",
                "width": 600,
                "height": 400,
                "url": "https://x.com/settings",
                "useHttpsScheme": true,
                "dragDropEnabled": false,
                "titleBarStyle": "Visible"
            }
        ],
        "security": {}
    }
}
